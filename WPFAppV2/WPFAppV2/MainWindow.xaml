<Window x:Class="WPFAppV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAppV2"
        mc:Ignorable="d"
        Title="Main menu" Height="450" Width="800">
    <Grid>
        <Menu Background="#EBDCB2">
            <MenuItem x:Name="Address" Header="Address" Click="Address_OnClick"></MenuItem>
            <MenuItem x:Name="City" Header="City" Click="City_OnClick"></MenuItem>
            <MenuItem x:Name="Country" Header="Country" Click="Country_OnClick"></MenuItem>
            <MenuItem x:Name="Region" Header="Region" Click="Region_OnClick"></MenuItem>
        </Menu>
    </Grid>
</Window>
